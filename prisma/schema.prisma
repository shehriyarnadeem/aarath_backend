generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String       @id @default(uuid())
  serialNumber    Int          @unique
  userId          String
  category        String
  title           String
  description     String
  quantity        Int
  unit            String
  images          String[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  price           Float?
  priceType       String?
  environment     ProductType  @default(MARKETPLACE)
  user            User         @relation(fields: [userId], references: [id])
  auctionRoom     AuctionRoom?
}



enum ProductType {
  MARKETPLACE
  AUCTION
}

model AuctionBid {
  id                String      @id @default(uuid())
  auctionRoomId     String
  bidderId          String
  bidderName        String?
  amount            Float
  timestamp         DateTime    @default(now())
  isWinningBid      Boolean     @default(false)
  previousBidAmount Float?
  bidType           String      @default("regular")
  isActive          Boolean     @default(true)
  auctionRoom       AuctionRoom @relation(fields: [auctionRoomId], references: [id], onDelete: Cascade)

  @@index([auctionRoomId, timestamp])
  @@index([bidderId])
  @@map("auction_bids")
}

model AuctionParticipant {
  id               String      @id @default(uuid())
  auctionRoomId    String
  userId           String
  userName         String?
  firstJoinedAt    DateTime    @default(now())
  lastSeenAt       DateTime    @default(now())
  totalBidsPlaced  Int         @default(0)
  highestBidAmount Float?
  isWinner         Boolean     @default(false)
  hasLeftRoom      Boolean     @default(false)
  auctionRoom      AuctionRoom @relation(fields: [auctionRoomId], references: [id], onDelete: Cascade)

  @@unique([auctionRoomId, userId])
  @@index([userId])
  @@map("auction_participants")
}

model AuctionRoom {
  id                     String               @id @default(uuid())
  productId              String               @unique
  startingBid            Float
  currentHighestBid      Float?
  currentHighestBidderId String?
  winnerId               String?
  reservePrice           Float?               @default(0.00)
  minBidIncrement        Float                @default(50.00)
  startTime              DateTime
  endTime                DateTime
  status                 String               @default("scheduled")
  totalBids              Int                  @default(0)
  totalParticipants      Int                  @default(0)
  isReserveReached       Boolean              @default(false)
  buyNowPrice            Float?
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  bids                   AuctionBid[]
  participants           AuctionParticipant[]
  product                Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  closed                 Boolean              @default(true)
  @@map("auction_rooms")
}

model TestCounter {
  id        String   @id @default(uuid())
  counterId String   @unique @map("counter_id")
  value     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("test_counters")
}

model User {
  id                 String    @id @default(uuid())
  email              String?   @unique
  name               String?
  role               UserRole?
  state              String?
  city               String?
  businessCategories String[]
  profileCompleted   Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  accountType        String?
  businessAddress    String?
  businessRole       String?
  companyName        String?
  companyPicture     String?
  personalLocation   String?
  personalName       String?
  personalProfilePic String?
  whatsapp           String?
  whatsappVerified   Boolean   @default(false)
  businessName       String?
  products           Product[]

  @@map("users")
}

model WebSocketConnection {
  id           String   @id @default(uuid())
  connectionId String   @unique @map("connection_id")
  counterId    String?  @map("counter_id")
  userId       String?  @map("user_id")
  connectedAt  DateTime @default(now()) @map("connected_at")
  expiresAt    DateTime @map("expires_at")

  @@index([counterId])
  @@index([expiresAt])
  @@index([userId])
  @@map("websocket_connections")
}

enum UserRole {
  FARMER
  BROKER
  BUYER
  RESELLER
  SELLER
  TRADER
  SHELLER_MILLER_PROCESSOR
  EXPORTER
  STOCK_INVESTOR
}
