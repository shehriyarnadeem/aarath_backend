generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String @id @default(uuid())
  serialNumber Int    @unique
  userId       String

  // Basic Product Information
  category    String // Rice, Wheat, Cotton, etc.
  subCategory String? // Basmati, Sella, etc.
  title       String
  description String
  quantity    Int
  unit        String // tons, kg, quintal, etc.
  images      String[]

  // Pricing Information
  price        Int?
  priceType    PriceType? @default(FIXED)
  availableQty Int?       @default(1)
  minOrderQty  Int?       @default(1)
  maxOrderQty  Int?       @default(1)
  pricePerUnit Int?       @default(1)

  // Agricultural Specifications
  variety String? // Rice variety, wheat type, etc.
  type    String? @default("STANDARD")

  // Quality Parameters (for grains)
  grade    String?
  moisture Float? // Moisture percentage
  purity   Float? // Purity percentage

  // Agricultural Details
  farmingMethod     FarmingMethod? @default(TRADITIONAL)
  harvestSeason     String?
  storageConditions String? // Storage conditions
  packagingMethod   String? // Jute bags, PP bags, etc.
  shelfLife         String?

  // Location & Availability
  state          String?
  city           String?
  landMark       String?
  availableFrom  DateTime?
  availableUntil DateTime?

  // Marketing & Engagement
  featured     Boolean @default(false)
  verified     Boolean @default(false)
  favorites    Int     @default(0)
  rating       Float?  @default(0.0)
  reviewsCount Int     @default(0)

  // Status & Environment
  status      ProductStatus @default(ACTIVE)
  environment ProductType?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user        User             @relation(fields: [userId], references: [id])
  auctionRoom AuctionRoom?
  reviews     ProductReview[]
  inquiries   ProductInquiry[]

  @@map("products")
}

enum ProductType {
  MARKETPLACE
  AUCTION
}

enum PriceType {
  FIXED
  NEGOTIABLE
  AUCTION_BASED
  BULK_DISCOUNT
}

enum ProductGrade {
  PREMIUM
  STANDARD
  COMMERCIAL
  EXPORT_QUALITY
  GRADE_A
  GRADE_B
  GRADE_C
}

enum QualityType {
  EXCELLENT
  GOOD
  AVERAGE
  FAIR
  PREMIUM
  STANDARD
}

enum FarmingMethod {
  ORGANIC
  TRADITIONAL
  MODERN
  HYBRID
  NATURAL
}

enum BusinessType {
  INDIVIDUAL
  PARTNERSHIP
  COMPANY
  COOPERATIVE
  FPO
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  SOLD_OUT
  OUT_OF_STOCK
  DRAFT
}

model ProductReview {
  id        String   @id @default(uuid())
  productId String
  userId    String
  rating    Float // 1.0 to 5.0
  comment   String?
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@unique([productId, userId])
  @@map("product_reviews")
}

model ProductInquiry {
  id            String        @id @default(uuid())
  productId     String
  buyerId       String
  sellerId      String
  message       String
  quantity      Int?
  expectedPrice Float?
  phone         String?
  email         String?
  status        InquiryStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  buyer   User    @relation("BuyerInquiries", fields: [buyerId], references: [id])
  seller  User    @relation("SellerInquiries", fields: [sellerId], references: [id])

  @@map("product_inquiries")
}

enum InquiryStatus {
  PENDING
  RESPONDED
  CLOSED
  CONVERTED
}

model AuctionBid {
  id                String      @id @default(uuid())
  auctionRoomId     String
  bidderId          String
  bidderName        String?
  amount            Float
  timestamp         DateTime    @default(now())
  isWinningBid      Boolean     @default(false)
  previousBidAmount Float?
  bidType           String      @default("regular")
  isActive          Boolean     @default(true)
  auctionRoom       AuctionRoom @relation(fields: [auctionRoomId], references: [id], onDelete: Cascade)

  @@index([auctionRoomId, timestamp])
  @@index([bidderId])
  @@map("auction_bids")
}

model AuctionParticipant {
  id               String      @id @default(uuid())
  auctionRoomId    String
  userId           String
  userName         String?
  firstJoinedAt    DateTime    @default(now())
  lastSeenAt       DateTime    @default(now())
  totalBidsPlaced  Int         @default(0)
  highestBidAmount Float?
  isWinner         Boolean     @default(false)
  hasLeftRoom      Boolean     @default(false)
  auctionRoom      AuctionRoom @relation(fields: [auctionRoomId], references: [id], onDelete: Cascade)

  @@unique([auctionRoomId, userId])
  @@index([userId])
  @@map("auction_participants")
}

model AuctionRoom {
  id                     String               @id @default(uuid())
  productId              String               @unique
  startingBid            Float
  currentHighestBid      Float?
  currentHighestBidderId String?
  winnerId               String?
  reservePrice           Float?               @default(0.00)
  minBidIncrement        Float                @default(50.00)
  startTime              DateTime
  endTime                DateTime
  status                 String               @default("scheduled")
  totalBids              Int                  @default(0)
  totalParticipants      Int                  @default(0)
  isReserveReached       Boolean              @default(false)
  buyNowPrice            Float?
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  bids                   AuctionBid[]
  participants           AuctionParticipant[]
  product                Product              @relation(fields: [productId], references: [id], onDelete: Cascade)
  closed                 Boolean              @default(true)

  @@map("auction_rooms")
}

model User {
  id                 String           @id @default(uuid())
  email              String?          @unique
  name               String?
  role               UserRole?
  state              String?
  city               String?
  businessCategories String[]
  profileCompleted   Boolean          @default(false)
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  accountType        String?
  businessAddress    String?
  businessRole       String?
  companyName        String?
  companyPicture     String?
  personalLocation   String?
  personalName       String?
  personalProfilePic String?
  whatsapp           String?
  whatsappVerified   Boolean          @default(false)
  businessName       String?
  // Relations
  products           Product[]
  productReviews     ProductReview[]
  buyerInquiries     ProductInquiry[] @relation("BuyerInquiries")
  sellerInquiries    ProductInquiry[] @relation("SellerInquiries")

  @@map("users")
}

model WebSocketConnection {
  id           String   @id @default(uuid())
  connectionId String   @unique @map("connection_id")
  counterId    String?  @map("counter_id")
  userId       String?  @map("user_id")
  connectedAt  DateTime @default(now()) @map("connected_at")
  expiresAt    DateTime @map("expires_at")

  @@index([counterId])
  @@index([expiresAt])
  @@index([userId])
  @@map("websocket_connections")
}

enum UserRole {
  FARMER
  BROKER
  BUYER
  RESELLER
  SELLER
  TRADER
  SHELLER_MILLER_PROCESSOR
  EXPORTER
  STOCK_INVESTOR
}
